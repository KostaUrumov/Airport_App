@model AddNewUserModel
@{
    ViewData["Title"] = "Add new User";
}

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <h3 class="text-center">@ViewBag.title</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                <input asp-for="@Model.Username" class="form-control" autocomplete="model" aria-required="true" />
                <label asp-for="@Model.Username"></label>
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
            </div>
            

            <p></p>
            <p></p>

            <div class="form-floating">
                <input asp-for="@Model.FirstName" class="form-control" autocomplete="model" aria-required="true" />
                <label asp-for="@Model.FirstName"></label>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>

            <p></p>
            <p></p>

            <div class="form-floating">
                <input asp-for="@Model.Lastname" class="form-control" autocomplete="model" aria-required="true" />
                <label asp-for="@Model.Lastname"></label>
                <span asp-validation-for="@Model.Lastname" class="text-danger"></span>
            </div>


            <p></p>
            <p></p>

            <div class="form-floating">
                <input asp-for="@Model.Email" class="form-control" autocomplete="model" aria-required="true" />
                <label asp-for="@Model.Email"></label>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>


            <p></p>
            <p></p>


            <div class="form-floating">
                <input asp-for="@Model.Password" class="form-control" autocomplete="model" aria-required="true" />
                <label asp-for="@Model.Password"></label>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>


            <p></p>
            <p></p>


            <div class="form-floating">
                <input asp-for="@Model.RepeatPassword" class="form-control" autocomplete="model" aria-required="true" />
                <label asp-for="@Model.RepeatPassword"></label>
                <span asp-validation-for="@Model.RepeatPassword" class="text-danger"></span>
            </div>


            <p></p>
            <p></p>
            

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}