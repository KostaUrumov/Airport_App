@model AddNewCountryModel
@{
    ViewData["Title"] = "Edit country";
}

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <h3 class="text-center">@ViewBag.title</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                <input asp-for="@Model.Name" class="form-control" autocomplete="model" aria-required="true" />
                <label asp-for="@Model.Name"></label>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <p></p>
            <p></p>

            <div class="mb-3">
                <label asp-for="@Model.ContinentId" class="form-label">Origin</label>
                <select asp-for="@Model.ContinentId" class="form-control">
                    @foreach (var country in Model.Continents)
                    {
                        <option value="@country">@country</option>
                    }
                </select>
                <span asp-validation-for="ContinentId" class="text-danger"></span>
            </div>

            <p></p>
            <p></p>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Save changes</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}