@model List<DisplayFlightModel>
@{
    ViewData["Title"] = "All flights";
}

<div class="text-center">
    <h3>@ViewBag.title</h3>
</div>
@if (Model.Count == 0)
{
    <div class="text-center">
        <p></p>
        <p></p>
        <p></p>
        <h5>No flights in our data</h5>
        <a class="" asp-area="" asp-controller="Flight" asp-action="Search">Search for flight</a>
        <p></p>
        <p></p>

    </div>
}
@if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
{
    <div class="text-center">
        <a class="" asp-area="" asp-controller="Flight" asp-action="Search">Search for flight</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Departure City</th>
                <th scope="col">Departure Airport</th>
                <th scope="col">Arrival city</th>
                <th scope="col">Arrival Airport</th>
                <th scope="col">Price</th>
                <th scope="col">Departure</th>
                <th scope="col">Arrive</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>

        @for (int i = 0; i < Model.Count; i++)
        {
            int number = @i + 1;
            <tbody>
                <tr>
                    <td>@number</td>
                    <td>@Model[i].DepartureCity</td>
                    <td>@Model[i].DepartureAirport.ToString()</td>
                    <td>@Model[i].DestinationCity</td>
                    <td>@Model[i].DestinationAirport.ToString()</td>
                    <td>@Model[i].Price $</td>
                    <td>@Model[i].StartDate</td>
                    <td>@Model[i].ArriveDate</td>
                    <td>
                        <a asp-controller="Flight" asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-warning">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Flight" asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
    
}
else
{

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Departure City</th>
                <th scope="col">Departure Airport</th>
                <th scope="col">Arrival city</th>
                <th scope="col">Arrival Airport</th>
                <th scope="col">Price</th>
                <th scope="col">Departure</th>
                <th scope="col">Arrive</th>
            </tr>
        </thead>

        @for (int i = 0; i < Model.Count; i++)
        {
            int number = @i + 1;
            <tbody>
                <tr>
                    <td>@number</td>
                    <td>@Model[i].DepartureCity</td>
                    <td>@Model[i].DepartureAirport.ToString()</td>
                    <td>@Model[i].DestinationCity</td>
                    <td>@Model[i].DestinationAirport.ToString()</td>
                    <td>@Model[i].Price $</td>
                    <td>@Model[i].StartDate</td>
                    <td>@Model[i].ArriveDate</td>
                </tr>
            </tbody>
        }
    </table>
}










