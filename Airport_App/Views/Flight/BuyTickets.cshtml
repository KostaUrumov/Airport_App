@model NumberTicketsModel
@{
    ViewData["Title"] = "Buy tickets";
}

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <h3 class="text-center">@ViewBag.title</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-floating">
                <input asp-for="@Model.NumberOfTickets" class="form-control" autocomplete="model" aria-required="true" />
                <label asp-for="@Model.NumberOfTickets"></label>
                <span asp-validation-for="@Model.NumberOfTickets" class="text-danger"></span>
            </div>

            <p></p>
            <p></p>

            <div class="form-floating">
                <input asp-for="@Model.FlightId" class="form-control" autocomplete="model" aria-required="true" />
                <label asp-for="@Model.FlightId"></label>
                <span asp-validation-for="@Model.FlightId" class="text-danger"></span>
            </div>

            <p></p>
            <p></p>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
