@model List<DisplayFlightModel>
@{
    ViewData["Title"] = "Result";
}

<div class="text-center">
    <h3>Fligths</h3>
</div>
@if (Model.Count == 0)
{
    <div class="text-center">
        <p></p>
        <p></p>
        <p></p>
        <h5>Nothing found</h5>
        <a class="" asp-area="" asp-controller="Flight" asp-action="Search">Search for flight</a>
        <p></p>
        <p></p>
        @if (this.User.Identity.IsAuthenticated)
        {
            <a class="" asp-area="" asp-controller="Flight" asp-action="Filter">Filter flights</a>
        }
    </div>
}
else
{

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Departure City</th>
                <th scope="col">Departure Airport</th>
                <th scope="col">Arrival city</th>
                <th scope="col">Arrival Airport</th>
                <th scope="col">Price</th>
                <th scope="col">Available Tickets</th>
                <th scope="col">Departure</th>
                <th scope="col">Arrive</th>
                <th scope="col">Buy</th>
            </tr>
        </thead>

        @for (int i = 0; i < Model.Count; i++)
        {
            int number = @i + 1;
            <tbody>
                <tr>
                    <td>@number</td>
                    <td>@Model[i].DepartureCity</td>
                    <td>@Model[i].DepartureAirport.ToString()</td>
                    <td>@Model[i].DestinationCity</td>
                    <td>@Model[i].DestinationAirport.ToString()</td>
                    <td>@Model[i].Price $</td>
                    <td>@Model[i].AvailableTickets</td>
                    <td>@Model[i].StartDate</td>
                    <td>@Model[i].ArriveDate</td>
                    <td>
                        <a asp-controller="Flight" asp-action="BuyTickets" asp-route-id="@Model[i].Id" class="btn btn-warning">Buy</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
}










