@model AddNewPlane
@{
    ViewData["Title"] = "Edit airplane";
}

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <h3 class="text-center">@ViewBag.title</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="@Model.ManufacturerId" class="form-label">Manufacturer</label>
                <select asp-for="@Model.ManufacturerId" class="form-control">
                    @foreach (var manifacturer in Model.Manufacturers)
                    {
                        <option value="@manifacturer.Id">@manifacturer.Name</option>
                    }
                </select>
                <span asp-validation-for="ManufacturerId" class="text-danger"></span>
            </div>

            <p></p>
            <p></p>

            <div class="form-floating">
                <input asp-for="@Model.Model" class="form-control" autocomplete="model" aria-required="true" />
                <label asp-for="@Model.Model"></label>
                <span asp-validation-for="@Model.Model" class="text-danger"></span>
            </div>
            <p></p>
            <p></p>
            <div class="form-floating">
                <input asp-for="@Model.Capacity" class="form-control" autocomplete="model" aria-required="true" />
                <label asp-for="@Model.Capacity"></label>
                <span asp-validation-for="@Model.Capacity" class="text-danger"></span>
            </div>

            <p></p>
            <p></p>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Save changes</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
