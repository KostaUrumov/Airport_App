@model List<DisplayCitiesModel>
@{
    ViewData["Title"] = "All Cities";
}

<div class="text-center">
    <h3>Airports</h3>
</div>
@if (Model.Count == 0)
{
    <div class="text-center">
        <p></p>
        <p></p>
        <p></p>
        <h5>No manufacturers in our data</h5>
        <a class="" asp-area="" asp-controller="City" asp-action="AddNewCity">Add new city</a>
        <p></p>
        <p></p>

    </div>
}
 @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Continent</th>
                <th scope="col">Country</th>
                <th scope="col">City</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>

            </tr>
        </thead>

        @for (int i = 0; i < Model.Count; i++)
        {
            int number = @i + 1;
            <tbody>
                <tr>
                    <td>@number</td>
                    <td>@Model[i].Continent</td>
                    <td>@Model[i].Country</td>
                    <td>@Model[i].CityName</td>
                    <td>
                        <a asp-controller="City" asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-warning">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="City" asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
    
}
else
{

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Continent</th>
                <th scope="col">Country</th>
                <th scope="col">City</th>
                
            </tr>
        </thead>

        @for (int i = 0; i < Model.Count; i++)
        {
            int number = @i + 1;
            <tbody>
                <tr>
                    <td>@number</td>
                    <td>@Model[i].Continent</td>
                    <td>@Model[i].Country</td>
                    <td>@Model[i].CityName</td>
                </tr>
            </tbody>
        }
    </table>
}










