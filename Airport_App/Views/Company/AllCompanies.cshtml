@model List<DisplayCompaniesModel>
@{
    ViewData["Title"] = "All manufacturers";
}

<div class="text-center">
    <h3>Manufacturers</h3>
</div>
@if (Model.Count == 0)
{
    <div class="text-center">
        <p></p>
        <p></p>
        <p></p>
        <h5>No manufacturers in our data</h5>
        <a class="" asp-area="" asp-controller="Company" asp-action="AddNewCompany">Add new manufacturer</a>
        <p></p>
        <p></p>

    </div>
}
else
{

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Origin</th>
                <th scope="col">Origin</th>
            </tr>
        </thead>

        @for (int i = 0; i < Model.Count; i++)
        {
            int number = @i + 1;
            <tbody>
                <tr>
                    <td>@number</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Origin</td>
                    <td>
                        <a asp-controller="Company" asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-warning">Edit</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
}










