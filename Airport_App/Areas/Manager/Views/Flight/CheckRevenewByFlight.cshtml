@model DisplayFlightsModel
@{
    ViewData["Title"] = "Get revenew for selected flight";
}
<div class="text center">
    <a class="" asp-area="Manager" asp-controller="Home" asp-action="Index">Manage home</a>
    <p></p>

</div>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <h3 class="text-center">@ViewBag.title</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="mb-3">
                <label asp-for="@Model.FlightId" class="form-label"> Select Flight Number</label>
                <select asp-for="@Model.FlightId" class="form-control">
                    @foreach (var flight in Model.AllFlights)
                    {
                        <option value="@flight.Id">@flight.FlightNumber</option>
                    }
                </select>
                <span asp-validation-for="FlightId" class="text-danger"></span>
            </div>

            <p></p>
            <p></p>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Select</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
